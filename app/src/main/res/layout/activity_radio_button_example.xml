<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioButtonExample">

  <RadioGroup
      android:id="@+id/radioGroupId"
      android:layout_width="179dp"
      android:layout_height="288dp"
      android:layout_marginStart="125dp"
      android:layout_marginTop="13dp"
      android:layout_marginEnd="138dp"
      android:layout_marginBottom="21dp"
      app:layout_constraintBottom_toTopOf="@+id/biriyaniSubmitId"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.29"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/biriyaniSubmitId" >

    <RadioButton
        android:id="@+id/chickenBriyaniId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CHICKEN BIRIYANI" />

    <RadioButton
        android:id="@+id/muttonBiriyaniId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MUTTON BIRIYANI" />

    <RadioButton
        android:id="@+id/prawnBiriyaniId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRAWN BIRIYANI" />

    <RadioButton
        android:id="@+id/fishBiriyaniId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FISH BIRIYANI" />
  </RadioGroup>

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="164dp"
      android:layout_marginTop="49dp"
      android:layout_marginEnd="189dp"
      android:layout_marginBottom="65dp"
      android:text="TYPE OF BIRIYANI"
      app:layout_constraintBottom_toTopOf="@+id/radioGroupId"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <Button
      android:id="@+id/biriyaniSubmitId"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:layout_marginBottom="47dp"
      android:text="SUBMIT"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/radioGroupId" />
</androidx.constraintlayout.widget.ConstraintLayout>